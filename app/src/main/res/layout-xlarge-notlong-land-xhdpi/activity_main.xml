<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mk.white_panher.MainActivity"
    android:id="@+id/nav_bar"
    android:background="@color/background"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"

    >







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <include
            layout="@layout/appbar_menu"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/below"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            >



            <com.github.mikephil.charting.charts.LineChart
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/LineChart" />











        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/price_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="Price: "
                            android:textColor="@color/colorAccent"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:alpha="0.7"
                            />

                        <TextView
                            android:id="@+id/Price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:text="$ 000"
                            android:textColor="@color/colorAccent"
                            android:textSize="40dp"
                            android:textStyle="bold" />
                    </LinearLayout>











                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/open_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open: "
                            android:textSize="18dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:alpha="0.5"
                            />

                        <TextView
                            android:id="@+id/open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="30dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/high_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High: "
                            android:textColor="@color/Text"
                            android:textSize="18dp"
                            android:alpha="0.5"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:id="@+id/high"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="30dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/low_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low: "
                            android:textSize="18dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center_vertical"
                            android:alpha="0.5"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:id="@+id/low"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="30dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/open_24_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open 24 Hour: "
                            android:textSize="18dp"
                            android:textColor="@color/Text"
                            android:alpha="0.5"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/open_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="30dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/close_24_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Close 24 Hour: "
                            android:textSize="18dp"
                            android:textColor="@color/Text"
                            android:alpha="0.5"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/close_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="30dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/high_24_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High 24 Hour: "
                            android:textSize="18dp"
                            android:textColor="@color/Text"
                            android:alpha="0.5"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/high_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="30dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/volume_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volume: "
                            android:textSize="18dp"
                            android:textColor="@color/Text"
                            android:alpha="0.5"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="30dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/total_mined_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Mined: "
                            android:textSize="18dp"
                            android:textColor="@color/Text"
                            android:alpha="0.5"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/total_mined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="30dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/last_update_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Update: "
                            android:textSize="18dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:alpha="0.5"
                            />

                        <TextView
                            android:id="@+id/lastupdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="30dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/last_id_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Trade ID: "
                            android:textSize="18dp"
                            android:textColor="@color/Text"
                            android:alpha="0.5"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/last_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="30dp"
                            android:textColor="@color/Text"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="30dp"
                    >

                    <TextView
                        android:id="@+id/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BTC"
                        android:textSize="20dp"
                        android:textColor="@color/Text"
                        android:padding="10dp"
                        />

                    <EditText
                        android:id="@+id/number_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="20dp"
                        android:textColor="@color/Text"
                        android:background="@drawable/border"
                        android:inputType="numberDecimal"
                        android:digits="0123456789."
                        />

                    <TextView
                        android:id="@+id/usd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="= USD"
                        android:textSize="20dp"
                        android:textColor="@color/Text"
                        android:padding="10dp"
                        />


                    <EditText
                        android:id="@+id/usd_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="20dp"
                        android:textColor="@color/Text"
                        android:background="@drawable/border"
                        android:inputType="number"
                        android:focusable="false"
                        />



                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/send_data"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter"
                    android:background="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textColor="@color/background"


                    />




            </LinearLayout>


        </ScrollView>






    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_gravity="start"
        app:menu="@menu/activity_main_drawer"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header"
        />

</android.support.v4.widget.DrawerLayout>
